---
import { record } from 'astro:schema';

interface Props {
  title: string;
  description: string;
  description_1: string;
  description_2: string;
  description_3: string;
  features: string[];
  type: number;
  route: string // Tipo de servicio
}

const { title, description, description_1, description_2, description_3, features, type, route } = Astro.props;

// Selecciona la descripción correcta según el tipo de servicio
const selectedDescription = type === 1 ? description_1 : 
                            type === 2 ? description_2 : 
                            type === 3 ? description_3 : 
                            description; // Usa la descripción por defecto si no hay un tipo específico

// // <-- MAPA DE RUTAS -->
const routes = `/services/${route}`
// const route = routes[title] || '/'; // Ruta por defecto si no se encuentra el título
---

<div
  class="bg-black-0 w-[350px] h-[460px] rounded-[32px] py-10 px-5 flex flex-col justify-between text-white-0 font-gabarito"
>
    <div class="flex flex-col space-y-6">
        <h2 class="text-[30px] font-semibold text-center text-white-0">
            {title}
        </h2>
          
        <p class="text-description text-[17px] text-white-0 px-5">
            {selectedDescription}
        </p>
          
        <ul class="mb-4 px-5 space-y-2">
            {features.map((feature) => (
                <li class="list-disc list-inside text-[15px]">
                    {feature}
                </li>
            ))}
        </ul>
      </div>
          
        <a
            href={routes}
            type="button"
            class="font-gabarito bg-red-0 text-buttonCard w-[250px] h-[50px] text-[20px] rounded-full mx-auto mt-4 font-semibold flex items-center justify-center shadow-button-shadow transition-all duration-300 hover:bg-red-1 hover:text-gray-0 hover:shadow-lg"
        >
            Ver más
            <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg" class="ml-2">
                <path d="M21.6667 28.3334L30 20L21.6667 11.6667M10 28.3334L18.3333 20L10 11.6667" stroke="#D9D9D9" stroke-width="3.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </a>
</div>
