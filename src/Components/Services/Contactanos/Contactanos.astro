---
interface Props {
  textBlack?: boolean;
}

const { textBlack } = Astro.props;
---

<section
  class={`text-center sm:mt-5 lg:mt-10 p-6 ${textBlack ? "text-black-0 font-semibold" : "text-white-0"}`}
>
